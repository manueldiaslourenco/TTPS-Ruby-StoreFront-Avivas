<%= render 'shared/navbar_admin' %>

<h1>Nuevo Producto</h1>

<%= form_with model: @product, local: true do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :stock %>
    <%= form.number_field :stock, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :category, "Categoría" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Selecciona una categoría", required: true %>
  </div>

  <%= form.label :size %>
  <%= form.text_field :size %>

  <%= form.label :color %>
  <%= form.text_field :color %>

  <%= form.label :image %>
  <%= form.file_field :image, required: true %>

  <%= form.submit %>
<% end %>