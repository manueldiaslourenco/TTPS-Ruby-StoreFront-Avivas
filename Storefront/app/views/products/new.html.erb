<%= render 'shared/navbar_admin' %>

<h1>Nuevo Producto</h1>

<%= form_with model: @product, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>

  <%= form.label :description %>
  <%= form.text_area :description, required: true %>

  <%= form.label :price %>
  <%= form.number_field :price, required: true %>

  <%= form.label :stock %>
  <%= form.number_field :stock, required: true %>

  <%= form.label :category %>
  <%= form.text_field :category, required: true %>

  <%= form.label :size %>
  <%= form.text_field :size %>

  <%= form.label :color %>
  <%= form.text_field :color %>

  <%= form.label :image %>
  <%= form.file_field :image, required: true %>

  <%= form.submit %>
<% end %>