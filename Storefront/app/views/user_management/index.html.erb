<% content_for :title do %>
    Listado Usuarios
<% end %>

<%= render 'shared/navbar_admin' %>

<h1>Lista de Usuarios</h1>
<%= link_to 'Nuevo Usuario', new_admin_user_path %>
<% if @users.present? %>
  <table>
    <thead>
      <tr>
        <th>Nombre de Usuario</th>
        <th>Email</th>
        <th>Teléfono</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role %></td>
          <td>
            <%= form_with url: delete_admin_user_path(user.id), method: :delete, class: "dropdown-item", local: true do |form| %>
              <%= form.submit "Eliminar", class: "btn", data: { confirm: "¿Estás seguro de eliminar a este usuario?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>
<% else %>
  <h2>No hay usuarios registrados.</h2>
<% end %>
